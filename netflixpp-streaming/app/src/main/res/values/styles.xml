<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.Netflix.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.Netflix.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.Netflix.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Netflix.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/netflix_text_gray</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Netflix.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/netflix_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Netflix.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/netflix_dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/netflix_light_gray</item>
    </style>

    <!-- Card Styles -->
    <style name="Card.Netflix" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/netflix_dark_gray</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Card.Netflix.Featured" parent="Card.Netflix">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Chip.Netflix" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/netflix_light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeColor">@color/netflix_red</item>
        <item name="checkedIconTint">@color/netflix_red</item>
    </style>
</resources>
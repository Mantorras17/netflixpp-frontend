<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Error Icon -->
    <ImageView
        android:id="@+id/ivError"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_error"
        app:tint="@color/netflix_text_gray"
        android:alpha="0.6"
        android:layout_marginBottom="24dp"
        android:contentDescription="Error icon" />

    <!-- Error Title -->
    <TextView
        android:id="@+id/tvErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        tools:text="No Internet Connection" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error_message"
        android:textColor="@color/netflix_text_gray"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"
        android:lineSpacingExtra="4dp"
        tools:text="Please check your internet connection and try again." />

    <!-- Primary Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="@string/retry"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingHorizontal="48dp"
        app:icon="@drawable/ic_refresh"
        app:iconTint="@color/white"
        app:backgroundTint="@color/netflix_red"
        app:cornerRadius="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Secondary Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSecondary"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="@string/go_back"
        android:textColor="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/netflix_light_gray"
        app:cornerRadius="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        tools:visibility="visible" />

</LinearLayout>
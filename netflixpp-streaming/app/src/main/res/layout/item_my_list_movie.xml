<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/netflix_dark_gray"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_movie_placeholder"
            android:contentDescription="Movie thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Gradient Overlay on Thumbnail -->
        <View
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@drawable/gradient_overlay_light"
            app:layout_constraintTop_toTopOf="@+id/ivThumbnail"
            app:layout_constraintBottom_toBottomOf="@+id/ivThumbnail"
            app:layout_constraintStart_toStartOf="@+id/ivThumbnail" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivThumbnail"
            app:layout_constraintEnd_toStartOf="@+id/btnRemove">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Night of the Living Dead" />

            <!-- Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023"
                    android:textColor="@color/netflix_text_gray"
                    android:textSize="12sp"
                    tools:text="1968" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/netflix_text_gray" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h 15m"
                    android:textColor="@color/netflix_text_gray"
                    android:textSize="12sp"
                    tools:text="1h 35m" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/netflix_text_gray" />

                <TextView
                    android:id="@+id/tvGenre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Action"
                    android:textColor="@color/netflix_text_gray"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Horror" />

            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/netflix_red"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="4.2" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie description..."
                android:textColor="@color/netflix_text_gray"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="A group of people hide from bloodthirsty zombies in a farmhouse." />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlay"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Play"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_play"
                    app:iconTint="@color/black"
                    app:iconSize="18dp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="6dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Info"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:icon="@drawable/ic_info"
                    app:iconTint="@color/white"
                    app:iconSize="18dp"
                    app:backgroundTint="@color/netflix_light_gray"
                    app:cornerRadius="6dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

        <!-- Remove Button -->
        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/netflix_text_gray"
            android:contentDescription="Remove from list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>